pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        
        stage('Build') {
            steps {
                sh 'python --version'
                sh 'pip --version || true'
                sh 'ls -la'
            }
        }
        
        stage('Test') {
            steps {
                sh '''
                    # Create and run simple test
                    python3 -c "
def add_numbers(a, b):
    return a + b

# Run basic tests
print('Running tests...')
assert add_numbers(2, 2) == 4, '2+2 should be 4'
assert add_numbers(10, 20) == 30, '10+20 should be 30'
print('âœ… All tests passed!')
"
                '''
            }
        }
    }
    
    post {
        always {
            echo "Build completed"
        }
    }
}